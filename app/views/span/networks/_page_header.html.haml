-# app/views/span/networks/_page_header.html.haml

.pageHeader
  .pageHeaderBox
    .pageHeaderItem
      .pageHeaderTitle
        - if params[:action] == "index"
          %h1#ajaxTitle Published Networks
        - if params[:action] == "unpublished"
          %h1#ajaxTitle Unpublished Networks
        - if params[:action] == "all"
          %h1#ajaxTitle All Networks
        - if params[:action] == "new" || params[:action] == "create"
          %h1 Add New Network
        - if params[:action] == "edit" || params[:action] == "update"
          %h1 Edit Network
